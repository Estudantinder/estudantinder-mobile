{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,

    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,

    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  }
}
